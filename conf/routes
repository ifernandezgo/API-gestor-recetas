# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
#GET     /                           controllers.HomeController.index()

#Crear una receta
POST    /recipe     controllers.RecipeController.crearReceta(req: Request)

#Obtener una receta a través de su id
GET     /recipe/:id     controllers.RecipeController.getRecetaById(req: Request, id: Integer)

#Obtener una receta a través de su nombre
GET     /recipeByName/:name     controllers.RecipeController.getRecetaByName(req: Request, name: String)

#Obtener todas las recetas de la base de datos
GET     /recipes        controllers.RecipeController.getAllRecipes(req: Request)

#Obtener todas las recetas
#GET     /recipes    controllers.RecipeController.getAllRecipes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)