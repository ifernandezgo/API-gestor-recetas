@(ids: List[Integer], names: Map[Integer, String], ingredients: Map[Integer, List[String]], categories: Map[Integer, List[String]], types: Map[Integer, String], times: Map[Integer, Integer], descriptions: Map[Integer, String])
<?xml version="1.0" encoding="utf-8" ?>
<recipes>
    @for(id <- ids) {
        <recipe>
            <id>@(id)</id>
            <name>@(names.get(id))</name>
            <ingredients>
                @for(i <- ingredients.get(id)) {
                    <ingredient>@(i)</ingredient>
                }
            </ingredients>
            <categories>
                @for(c <- categories.get(id)) {
                    <category>@(c)</category>
                }
            </categories>
            <type>@(types.get(id))</type>
            <time>@(times.get(id))</time>
            <description>@(descriptions.get(id))</description>
        </recipe>
    }
</recipes>